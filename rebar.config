{erl_opts, [debug_info]}.

{plugins,
  [rebar3_hex,
  rebar3_auto,
  { rebar3_elixir_compile, ".*", {git, "https://github.com/barrel-db/rebar3_elixir_compile.git", {branch, "master"}}}
  ]}.

{deps, [
   {faker, {elixir, "faker" ,"0.6.0"}}
]}.

{provider_hooks, [
  {pre, [{compile, {ex, compile}}]}
]}.

{elixir_opts,
  [
    {env, dev}
  ]
}.

{shell, [
  % {config, [{config, "config/sys.config"}]},
    {apps, [potatoserver]}
]}.
